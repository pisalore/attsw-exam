<!-- used by hibernate -->

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="real.postgres">
		<class>com.unifi.attsw.exam.model.Museum</class>
		<class>com.unifi.attsw.exam.model.Exhibition</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ATTWS_DB" />
			<property name="javax.persistence.jdbc.user" value="attws" />
			<property name="javax.persistence.jdbc.password" value="attws" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		</properties>

	</persistence-unit>
</persistence>